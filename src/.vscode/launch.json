    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Fearn Compiler",
            "request": "launch",
            "mainClass": "FearnC",
            "args": ["test/test.fearn"],
            "stepFilters": {
                "skipClasses": [
                    "$JDK",
                    "junit.*",
                    "java.*",
                    "org.*",
                    "util.*",
                    "parser.gen.*"
                ],
                "skipSynthetics": false,
                "skipStaticInitializers": false,
                "skipConstructors": true
            },
            "preLaunchTask": "Build Runtime"
        }
    ]
}