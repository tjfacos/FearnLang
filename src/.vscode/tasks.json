{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "Build and Run Fearn Compiler",
            "command": ".\\build.bat",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "process",
            "label": "Build Grammar Only",
            "command": "cd parser | .\\gen.bat",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "process",
            "label": "Test ANTLR Grammar",
            "command": "antlr4-parse",
            "args": ["parser/FearnGrammar.g4", "program", "-gui", "test/bubbleSort.fearn"],
            "group": {
              "kind": "test",
              "isDefault": false
            }
          }
    ]
}